<FilesMatch "\.(cgi|shtml|phtml|php)$">
  SSLOptions +StdEnvVars
</FilesMatch>

<Directory /usr/lib/cgi-bin>
  SSLOptions +StdEnvVars
</Directory>

<IfModule mod_php.c>
  <FilesMatch "\.php$">
    SetHandler application/x-httpd-php
  </FilesMatch>
</IfModule>
